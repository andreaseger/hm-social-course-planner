= form_for @relationship do |f|
  -if @relationship.errors.any?
    #error_explanation
      %h2= "#{pluralize(@relationship.errors.count, "error")} prohibited this profile from being saved:"
      %ul
        - @relationship.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :classmate
    = f.collection_select :classmate_id, @relationship.user.not_classmate_with, :id, :fullname
  .actions
    = f.submit 'Add'
